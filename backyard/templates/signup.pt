<metal:block use-macro="view.layout">
  <div metal:fill-slot="content">
    <div class="register-page">
      <div class="row">
        <div class="col-md-10">
          <div class="col-md-3"></div>
          <div class="col-md-4">
            <h1>
              <span class="font-semi-bold">sign up</span>
            </h1>
            <form action="/register" method="post" class="input-group">
              <input class="form-control" type="text" placeholder="username" />
              <div class="col-md-3"></div>
              <input class="form-control" name="password" type="password" placeholder="type password" />
              <input class="form-control" name="password_confirmation" type="password" placeholder="re-type password" />
              <button type="submit" id="submit" class="btn btn-primary">register</button>
              <button type="reset" id="reset" class="btn btn-default">cancel</button>
            </form>
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
    </div>
  </div>
</metal:block>
